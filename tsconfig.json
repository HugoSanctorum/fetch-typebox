{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["es2022"],
    "target": "es2022",
    "noImplicitAny": true,
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "skipLibCheck": false,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "$src/*": ["./src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  }
}
